@using FantasyFL.Web.ViewModels.Fixtures
@model List<FixtureViewModel>

@{
    this.ViewData["Title"] = "Results";
}

<div class="row justify-content-center">
    <div class="col-auto table-responsive">
        <h2 class="text-center mt-3 mb-4">Results</h2>
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center" scope="col">Home</th>
                    <th class="text-center" scope="col">Details</th>
                    <th class="text-center" scope="col">Away</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fixture in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img class="img-fluid" src="~/images/logos/@fixture.HomeTeamLogo" alt="home" style="max-height: 40%; max-width: 40%;">
                            <h5>@fixture.HomeTeam</h5>
                        </td>
                        <td class="text-center">
                            <div>@fixture.Stadium</div>
                            <h3>@fixture.HomeGoals : @fixture.AwayGoals</h3>
                            <div>@fixture.Date</div>
                        </td>
                        <td class="text-center">
                            <img src="~/images/logos/@fixture.AwayTeamLogo" alt="away" style="max-height: 40%; max-width: 40%;">
                            <h5>@fixture.AwayTeam</h5>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<textarea id="error-message" hidden>@TempData["Message"]</textarea>

@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/alerts.js"></script>
}