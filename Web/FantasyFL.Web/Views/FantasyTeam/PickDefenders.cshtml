@using FantasyFL.Web.ViewModels.FantasyTeam
@using FantasyFL.Data.Models.Enums
@model PickPlayersFormModel

@{
    ViewData["Title"] = "Pick Defenders";
}

<div class="row">
    <div class="overflow-auto col-md-6" style="height: 600px;">
        <table class="table table-hover">
            <tbody>
                @foreach (var player in Model.Players.Where(p => p.Position == Position.Defender.ToString()))
                {
                    <tr>
                        <td class="text-center font-weight-bold">@player.Name</td>
                        <td class="text-center">@player.Team</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <form asp-controller="FantasyTeam" asp-action="PickMidfielders" class="pl-5" method="post">
            <h4>Pick Your Defenders</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            @for (int i = 0; i < Model.Goalkeepers.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="Goalkeepers[i].Name"></label>
                    <input asp-for="Goalkeepers[i].Name" class="form-control" readonly />
                    <span asp-validation-for="Goalkeepers[i].Name" class="text-danger"></span>
                </div>
            }

            @for (int i = 0; i < 5; i++)
            {
                <div class="form-group">
                    <label asp-for="Defenders[i].Name"></label>
                    <input asp-for="Defenders[i].Name" class="form-control" />
                    <span asp-validation-for="Defenders[@i].Name" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Select</button>
            </div>
        </form>
    </div>
</div>