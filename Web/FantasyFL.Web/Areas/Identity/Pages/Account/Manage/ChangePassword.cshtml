@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="pb-3">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating pb-3">
                <label asp-for="Input.OldPassword" class="form-label font-weight-bold"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger d-block"></span>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
            </div>
            <div class="form-floating pb-3">
                <label asp-for="Input.NewPassword" class="form-label font-weight-bold"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger d-block"></span>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-floating pb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label font-weight-bold"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-block"></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
        </form>
    </div>
</div>

<textarea id="error-message" hidden>@TempData["StatusMessage"]</textarea>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/alerts.js"></script>
}